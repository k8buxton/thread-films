<div class="container d-flex" style="height: 100vh; background-color: black;">
  <div class="text-container-home-top" id="margin-contact">
    <h1 id="thread-strapline">GET IN TOUCH</h1>
    <h3 class="my-5" style="font-weight: 100; font-size: 24px;">We'd love to hear from you.</h3>
    <p class="m-0">Phone // +44 (0)20 7000 000</hp>
    <p class="m-0">Email // <a href="mailto:info@threadfilms.co" class="">info@threadfilms.co</a></p>
    <p class="m-0"><a href="https://vimeo.com/mgris" target="_blank"><i class="fab fa-vimeo-v mr-2"></i></a>  //  <a href="https://www.linkedin.com/in/mauriciogris/" target="_blank"><i class="fab fa-linkedin-in mx-2"></i></a>  //  <a href="https://twitter.com/mau_gris" target="_blank"><i class="fab fa-twitter mx-2"></i></a>  //  <a href="https://www.instagram.com/maugris/" target="_blank"><i class="fab fa-instagram ml-2"></i></a></p>
  </div>
</div>

<div class="contact-container justify-content-center">
  <div class="row justify-content-center w-100">
    <div class="col-6 col-lg-4">
      <h2 class="text-center my-5">OR SEND US A MESSAGE.</h2>
      <!-- <h3 class="text-center my-5" style="font-weight: 100; font-size: 24px;">Or send us a message.</h3> -->
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <%= f.input :name, :required => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :message, :as => :text, :required => true %>
        <div class="hidden">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'SEND MESSAGE', :class=> "btn w-100 contact-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
